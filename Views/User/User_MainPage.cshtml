@model List<PrimeMarket.Models.Listing>
@{
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PrimeMarket - Main Page</title>
    <link rel="stylesheet" href="/css/UserMainPage.css" />
    <style>

        .item-card-link {
            text-decoration: none;
            color: inherit;
            display: block;
            transition: transform 0.2s ease;
            width: calc(25% - 20px); 
            min-width: 250px;
            max-width: 300px;
            height: 350px;
        }

            .item-card-link:hover {
                transform: translateY(-5px);
            }

        .item-card {
            border: 1px solid #ddd;
            border-radius: 8px;
            overflow: hidden;
            background-color: white;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .item-image {
            height: 200px;
            overflow: hidden;
            flex-shrink: 0; 
        }

            .item-image img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .item-info {
            padding: 15px;
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            overflow: hidden;
        }

            .item-info h3 {
                margin-top: 0;
                margin-bottom: 10px;
                font-size: 18px;
                white-space: nowrap; 
                overflow: hidden; 
                text-overflow: ellipsis;
                max-width: 100%; 
                line-height: 1.5;
                padding-bottom: 5px;
                height: 27px;
            }
        .logo img {
            width: 120px;
            height: 50px;
            object-fit: cover;
            border-radius: 8px;
        }

        .listing-content {
            max-width: 1400px;
            margin: 0 auto;
            padding: 20px;
        }

        .listings h2 {
            text-align: center;
            margin-bottom: 30px;
            font-size: 28px;
        }

        .items-grid {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
        }

        .item-card-link {
            text-decoration: none;
            color: inherit;
            display: block;
            transition: transform 0.2s ease;
            width: calc(25% - 20px); 
            min-width: 250px;
            max-width: 300px;
        }

            .item-card-link:hover {
                transform: translateY(-5px);
            }

        .item-card {
            border: 1px solid #ddd;
            border-radius: 8px;
            overflow: hidden;
            background-color: white;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            height: 100%;
        }

        .item-image {
            height: 200px;
            overflow: hidden;
        }

            .item-image img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .item-description {
            color: #666;
            font-size: 14px;
            margin-bottom: 10px;
            line-height: 1.4;
        }

        .item-price {
            font-weight: bold;
            color: #0066cc;
            font-size: 16px;
            margin-bottom: 5px;
        }

        .item-location {
            font-size: 14px;
            color: #777;
        }

        #current-filter {
            display: inline-block;
            margin-left: 15px;
            font-size: 16px;
            font-weight: normal;
            color: #555;
        }

        #no-results-message {
            text-align: center;
            padding: 50px;
            color: #666;
            background-color: #f8f9fa;
            border-radius: 10px;
            margin: 20px 0;
            width: 100%;
        }

        #clear-filters {
            padding: 8px 16px;
            background-color: #0066cc;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-top: 10px;
        }

        .item-rating {
            margin-bottom: 8px;
        }

        .stars {
            display: flex;
            align-items: center;
        }

        .star {
            color: #ddd;
            font-size: 14px;
        }

            .star.full, .star.half {
                color: #ffb74d;
            }

        .rating-text {
            margin-left: 5px;
            font-size: 14px;
            color: #666;
        }
    </style>
</head>
<body>
    <div style="margin-top: 80px;">
        <nav style="box-shadow: rgba(0,0,0,.12) 0px 1px 3px, rgba(0,0,0,.24) 0px 1px 2px; border-radius:15px;" class="container">
            <ul id="mainCategories" class="category-menu" style="list-style:none;display:flex;gap:30px;padding:10px 0;"></ul>
        </nav>
    </div>

    <main class="listing-content">
        <section class="listings">
            <h2>Listings</h2>
            <div class="items-grid">
                @foreach (var item in Model)
                {
                    var stockAttr = item.Stock.HasValue
                    ? $"data-max-stock=\"{item.Stock.Value}\""
                    : string.Empty;

                    <a href="@Url.Action("Details", "Listing", new { id = item.Id })"
                       class="item-card-link"
                    @Html.Raw(stockAttr)
                       data-category="@item.Category"
                       data-subcategory="@item.SubCategory"
                       data-detail-category="@item.DetailCategory">
                        <div class="item-card">
                            @if (item.Images != null && item.Images.Any())
                            {
                                var mainImage = item.Images.FirstOrDefault(i => i.IsMainImage)?.ImagePath
                                ?? item.Images.First().ImagePath;
                                <div class="item-image">
                                    <img src="@mainImage" alt="@item.Title" />
                                </div>
                            }
                            else
                            {
                                <div class="item-image">
                                    <img src="/images/placeholder.png" alt="No image" />
                                </div>
                            }

                            <div class="item-info">
                                <h3>@item.Title</h3>
                                <p class="item-price">@item.Price.ToString("C")</p>
                                <div class="item-rating">
                                    @{
                                        double? avgRating = null;
                                        if (ViewBag.ListingRatings != null && ViewBag.ListingRatings.ContainsKey(item.Id))
                                        {
                                            avgRating = ViewBag.ListingRatings[item.Id];
                                        }

                                        double rating = avgRating ?? 0;
                                        int fullStars = (int)Math.Floor(rating);
                                        bool hasHalfStar = rating - fullStars >= 0.5;
                                    }
                                    <div class="stars">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            if (i <= fullStars)
                                            {
                                                <span class="star full">★</span>
                                            }
                                            else if (i == fullStars + 1 && hasHalfStar)
                                            {
                                                <span class="star half">★</span>
                                            }
                                            else
                                            {
                                                <span class="star empty">☆</span>
                                            }
                                        }
                                        <span class="rating-text">@rating.ToString("0.0")</span>
                                    </div>
                                </div>
                                <p class="item-location">@item.Location</p>

                                <span class="item-category" style="display:none;">@item.Category</span>
                                <span class="item-subcategory" style="display:none;">@item.SubCategory</span>
                                <span class="item-detail-category" style="display:none;">@item.DetailCategory</span>
                            </div>
                        </div>
                    </a>
                }
            </div>
        </section>
    </main>
</body>
</html>
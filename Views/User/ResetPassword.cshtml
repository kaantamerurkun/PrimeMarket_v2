@{
    ViewBag.Title = "Reset Password";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="/css/ResetPassword.css" />
</head>

<body>
    <div class="container">
        <br />
        <br />
        <br />
        <center>
            <div style="padding-top: 20px">
                <a>
                    <img style="height: 200px"
                         src="/images/PrimeMarket_Logo.png"
                         alt="PrimeMarket Logo" />
                </a>
                <h2>Reset My Password</h2>

                <div id="statusMessage" style="color: green; margin-bottom: 10px; display: none;"></div>
                <div id="errorMessage" style="color: red; margin-bottom: 10px; display: none;"></div>

                <!-- Step 1: Email form -->
                <form id="emailForm">
                    <label for="email">E-mail</label>
                    <input style="
                        padding: 8px 16px;
                        border: 1px solid #ddd;
                        border-radius: 20px;
                        width: 250px;
                        outline: none;
                        transition: border-color 0.3s ease;"
                           type="email"
                           id="email"
                           name="email"
                           required
                           placeholder="Enter your e-mail" />
                    <br /><br />
                    <div>
                        <button style="
                            cursor: pointer;
                            padding: 8px 16px;
                            border: 1px solid #ddd;
                            border-radius: 20px;"
                                type="submit"
                                id="sendCodeBtn">
                            Send Code
                        </button>
                    </div>
                    <br />
                </form>

                <!-- Step 2: Code + New Password form (hidden initially) -->
                <form id="codeForm" style="display: none;">
                    <input type="hidden" id="resetEmail" name="email" />

                    <label for="code">Enter Code</label>
                    <input style="
                        padding: 8px 16px;
                        border: 1px solid #ddd;
                        border-radius: 20px;
                        width: 250px;
                        outline: none;
                        transition: border-color 0.3s ease;"
                           type="text"
                           id="code"
                           name="code"
                           required
                           maxlength="6"
                           placeholder="Enter verification code" />
                    <br /><br />

                    <label for="newPassword">New Password</label>
                    <input style="
                        padding: 8px 16px;
                        border: 1px solid #ddd;
                        border-radius: 20px;
                        width: 250px;
                        outline: none;
                        transition: border-color 0.3s ease;"
                           type="password"
                           id="newPassword"
                           name="newPassword"
                           required
                           minlength="6"
                           placeholder="Enter new password" />
                    <br /><br />

                    <div>
                        <button style="
                            cursor: pointer;
                            padding: 8px 16px;
                            border: 1px solid #ddd;
                            border-radius: 20px;"
                                type="submit"
                                id="resetPasswordBtn">
                            Reset Password
                        </button>
                    </div>
                </form>
            </div>
        </center>
    </div>

    <script>
        // Show status or error message
        function showMessage(message, isError = false) {
            const statusEl = document.getElementById("statusMessage");
            const errorEl = document.getElementById("errorMessage");

            if (isError) {
                errorEl.textContent = message;
                errorEl.style.display = "block";
                statusEl.style.display = "none";
            } else {
                statusEl.textContent = message;
                statusEl.style.display = "block";
                errorEl.style.display = "none";
            }
        }

        // Handle Send Code
        document.getElementById("emailForm").addEventListener("submit", function (e) {
            e.preventDefault();

            const email = document.getElementById("email").value;
            const sendCodeBtn = document.getElementById("sendCodeBtn");

            // Disable button and show loading state
            sendCodeBtn.disabled = true;
            sendCodeBtn.textContent = "Sending...";

            fetch('/User/SendResetCode', {
                method: 'POST',
                headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                body: new URLSearchParams({ email })
            })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    showMessage(data.message);

                    // Hide email form and show code+password form
                    document.getElementById("emailForm").style.display = "none";
                    document.getElementById("codeForm").style.display = "block";

                    // Store email in hidden field
                    document.getElementById("resetEmail").value = email;
                } else {
                    showMessage(data.message, true);
                }
            })
            .catch(err => {
                showMessage("An error occurred. Please try again.", true);
                console.error(err);
            })
            .finally(() => {
                sendCodeBtn.disabled = false;
                sendCodeBtn.textContent = "Send Code";
            });
        });

        // Handle Reset Password
        document.getElementById("codeForm").addEventListener("submit", function (e) {
            e.preventDefault();

            const email = document.getElementById("resetEmail").value;
            const code = document.getElementById("code").value;
            const newPassword = document.getElementById("newPassword").value;
            const resetBtn = document.getElementById("resetPasswordBtn");

            // Validate password
            if (newPassword.length < 6) {
                showMessage("Password must be at least 6 characters long", true);
                return;
            }

            // Disable button and show loading state
            resetBtn.disabled = true;
            resetBtn.textContent = "Resetting...";

            fetch('/User/ResetPassword', {
                method: 'POST',
                headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                body: new URLSearchParams({ email, code, newPassword })
            })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    showMessage(data.message);

                    // Redirect to login page after short delay
                    setTimeout(() => {
                        window.location.href = data.redirectUrl;
                    }, 1500);
                } else {
                    showMessage(data.message, true);
                    resetBtn.disabled = false;
                    resetBtn.textContent = "Reset Password";
                }
            })
            .catch(err => {
                showMessage("An error occurred. Please try again.", true);
                console.error(err);
                resetBtn.disabled = false;
                resetBtn.textContent = "Reset Password";
            });
        });
    </script>
</body>
</html>
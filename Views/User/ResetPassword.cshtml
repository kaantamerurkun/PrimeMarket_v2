@{
    ViewBag.Title = "Reset Password";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="/css/ResetPassword.css" />
</head>

<body>
    <div class="container">
        <div class="logo-container">
            <a>
                <img class="logo-image"
                     src="/images/PrimeMarket_Logo.png"
                     alt="PrimeMarket Logo" />
            </a>
        </div>
        <h2>Reset My Password</h2>

        <div id="statusMessage"></div> <div id="errorMessage"></div>   <form id="emailForm">
            <div class="form-group">
                <label for="email">E-mail</label>
                <input type="email"
                       id="email"
                       name="email"
                       class="form-input"
                       required
                       placeholder="Enter your e-mail" />
            </div>
            <div>
                <button type="submit"
                        id="sendCodeBtn"
                        class="form-button">
                    Send Code
                </button>
            </div>
        </form>

        <form id="codeForm">
            <input type="hidden" id="resetEmail" name="email" />

            <div class="form-group">
                <label for="code">Enter Code</label>
                <input type="text"
                       id="code"
                       name="code"
                       class="form-input"
                       required
                       maxlength="6"
                       placeholder="Enter verification code" />
            </div>

            <div class="form-group">
                <label for="newPassword">New Password</label>
                <input type="password"
                       id="newPassword"
                       name="newPassword"
                       class="form-input"
                       required
                       minlength="6"
                       placeholder="Enter new password" />
            </div>

            <div>
                <button type="submit"
                        id="resetPasswordBtn"
                        class="form-button">
                    Reset Password
                </button>
            </div>
        </form>
    </div>

    <script>
        // Durum veya hata mesajı gösterme fonksiyonu
        function showMessage(message, isError = false) {
            const statusEl = document.getElementById("statusMessage");
            const errorEl = document.getElementById("errorMessage");

            // Önceki mesajları temizle
            statusEl.textContent = "";
            statusEl.style.display = "none";
            errorEl.textContent = "";
            errorEl.style.display = "none";

            if (isError) {
                errorEl.textContent = message;
                errorEl.style.display = "block"; // CSS'e göre "flex" veya "inline-block" da olabilir
            } else {
                statusEl.textContent = message;
                statusEl.style.display = "block"; // CSS'e göre "flex" veya "inline-block" da olabilir
            }
        }

        // Kod Gönderme İşlemi
        document.getElementById("emailForm").addEventListener("submit", function (e) {
            e.preventDefault();

            const email = document.getElementById("email").value;
            const sendCodeBtn = document.getElementById("sendCodeBtn");

            sendCodeBtn.disabled = true;
            sendCodeBtn.textContent = "Sending...";
            showMessage(""); // Önceki mesajları temizle

            fetch('/User/SendResetCode', {
                method: 'POST',
                headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                body: new URLSearchParams({ email })
            })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    showMessage(data.message);
                    document.getElementById("emailForm").style.display = "none";
                    document.getElementById("codeForm").style.display = "block"; // Yerleşime göre "flex" de olabilir
                    document.getElementById("resetEmail").value = email;
                } else {
                    showMessage(data.message, true);
                }
            })
            .catch(err => {
                showMessage("An error occurred. Please try again.", true);
                console.error(err);
            })
            .finally(() => {
                sendCodeBtn.disabled = false;
                sendCodeBtn.textContent = "Send Code";
            });
        });

        // Şifre Sıfırlama İşlemi
        document.getElementById("codeForm").addEventListener("submit", function (e) {
            e.preventDefault();

            const email = document.getElementById("resetEmail").value;
            const code = document.getElementById("code").value;
            const newPassword = document.getElementById("newPassword").value;
            const resetBtn = document.getElementById("resetPasswordBtn");

            showMessage(""); // Önceki mesajları temizle

            if (newPassword.length < 6) {
                showMessage("Password must be at least 6 characters long", true);
                return;
            }

            resetBtn.disabled = true;
            resetBtn.textContent = "Resetting...";

            fetch('/User/ResetPassword', {
                method: 'POST',
                headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                body: new URLSearchParams({ email, code, newPassword })
            })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    showMessage(data.message);
                    setTimeout(() => {
                        window.location.href = data.redirectUrl;
                    }, 1500);
                } else {
                    showMessage(data.message, true);
                    resetBtn.disabled = false; // Sadece hata durumunda butonu tekrar aktif et
                    resetBtn.textContent = "Reset Password";
                }
            })
            .catch(err => {
                showMessage("An error occurred. Please try again.", true);
                console.error(err);
                resetBtn.disabled = false;
                resetBtn.textContent = "Reset Password";
            });
        });
    </script>
</body>
</html>
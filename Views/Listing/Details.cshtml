        }

        .btn-makeoffer:hover {
            background: #FEBA00;
            color: white;
        }

    .btn-outofstock {
        background: #f8f9fa;
        color: #6c757d;
        cursor: not-allowed;
    }

    .product-specifications {
        margin-bottom: 30px;
        padding: 20px;
        background-color: #f8f9fa;
        border-radius: 10px;
    }

        .product-specifications h3 {
            margin-top: 0;
            margin-bottom: 15px;
            border-bottom: 1px solid #ddd;
            padding-bottom: 10px;

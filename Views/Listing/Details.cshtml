        }

    .related-listings-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 15px;
    }

    .related-listing-item {
        text-decoration: none;
        color: inherit;
        display: block;
        transition: transform 0.2s ease;
        border: 1px solid #eee;
        border-radius: 8px;
        overflow: hidden;
    }


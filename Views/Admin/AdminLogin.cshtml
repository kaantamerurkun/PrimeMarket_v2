@{
    ViewBag.Title = "Admin Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="/css/Login.css" />
</head>

<body>
    <div class="container">
        <img class="logo-img" src="/images/PrimeMarket_Logo.png" alt="PrimeMarket Logo" />
        <h2>Admin Login</h2>

        <form id="loginForm" method="post" asp-controller="Admin" asp-action="AdminLogin">
            @Html.AntiForgeryToken()

            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="error-message">
                    @ViewBag.ErrorMessage
                </div>
            }

            <div class="form-group">
                <label for="username">Username</label>
                <input class="login-input" type="text" id="username" name="Username" required placeholder="Enter your username" />
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input class="login-input" type="password" id="password" name="Password" required placeholder="Enter your password" />
            </div>

            <button class="login-button" type="submit">Login</button>
        </form>
    </div>
</body>
</html>
@* MyPurchase.cshtml *@
@model IEnumerable<PrimeMarket.Models.ViewModel.PurchaseViewModel>
@{
    ViewData["Title"] = "My Purchases";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<style>
    .container {
        max-width: 1000px;
        width: 100%;
        padding: 20px;
        margin: 120px auto 50px auto; /* Center horizontally + spacing */
    }

    .logo img {
        width: 120px;
        height: 50px;
        object-fit: cover;
        border-radius: 8px;
    }

    .my-purchases-header {
        text-align: center;
        margin-bottom: 20px;
    }

        .my-purchases-header h1 {
            margin: 0 auto;
        }

    .empty-purchases {
        text-align: center;
        padding: 50px;
        background-color: #f8f9fa;
        border-radius: 10px;
        margin-top: 20px;
    }

        .empty-purchases i {
            font-size: 50px;
            color: #ddd;
            margin-bottom: 20px;
        }

        .empty-purchases h2 {
            margin-bottom: 10px;
            color: #333;
        }

        .empty-purchases p {
            margin-bottom: 20px;
            color: #666;
        }

    .btn-browse {
        display: inline-block;
        padding: 10px 20px;
        background-color: #0066cc;
        color: #fff;
        text-decoration: none;
        border-radius: 50px;
        transition: background-color 0.3s ease;
    }

        .btn-browse:hover {
            background-color: #0055b3;
        }

    .purchases-list {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .purchase-item {
        display: flex;
        background-color: #fff;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 2px 5px rgba(0,0,0,.1);
        transition: transform .3s ease, box-shadow .3s ease;
    }

        .purchase-item:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0,0,0,.1);
        }

    .purchase-image {
        flex: 0 0 150px;
        overflow: hidden;
    }

        .purchase-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .purchase-details {
        flex: 1;
        padding: 15px;
        position: relative;
    }

        .purchase-details h3 {
            margin: 0 0 10px 0;
            font-size: 18px;
        }

    .seller,
    .purchase-date,
    .purchase-quantity {
        color: #666;
        font-size: 14px;
        margin-bottom: 5px;
    }

    .purchase-price {
        font-weight: 700;
        color: #0066cc;
        margin-bottom: 10px;
    }

    .payment-status {
        display: inline-block;
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 12px;
        margin-bottom: 10px;
    }

        .payment-status.authorized {
            background-color: #fff3cd;
            color: #856404;
        }

        .payment-status.completed {
            background-color: #d4edda;
            color: #155724;
        }

        .payment-status.refunded {
            background-color: #f8d7da;
            color: #721c24;
        }

    .purchase-actions {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
        margin-top: 10px;
    }

    .btn-view {
        padding: 8px 15px;
        background-color: #f0f0f0;
        color: #333;
        border: none;
        border-radius: 50px;
        text-decoration: none;
        font-size: 14px;
        transition: background-color .3s ease;
    }

        .btn-view:hover {
            background-color: #e0e0e0;
        }

    .alert {
        padding: 12px 15px;
        border-radius: 5px;
        margin-bottom: 20px;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
    }

    @@media (max-width: 768px) {
        .purchase-item {
            flex-direction: column;
        }

        .purchase-image {
            height: 180px;
            flex: none;
        }
    }
</style>

<div class="container">
    <div class="my-purchases-header">
        <h1>My Purchases</h1>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <div class="purchases-container">
        @if (Model == null || !Model.Any())
        {
            <div class="empty-purchases">
                <i class="fas fa-shopping-bag"></i>
                <h2>You haven't made any purchases yet</h2>
                <p>Browse listings and start shopping.</p>
                <a class="btn-browse" href="@Url.Action("User_MainPage", "User")">Browse Listings</a>
            </div>
        }
        else
        {
            <div class="purchases-list">
                @foreach (var p in Model.OrderByDescending(m => m.PurchaseDate))
                {
                    <div class="purchase-item">
                        <div class="purchase-image">
                            <img src="@p.ListingImage" alt="@p.ListingTitle" />
                        </div>
                        <div class="purchase-details">
                            <h3>@p.ListingTitle</h3>
                            <p class="seller">Seller: @p.SellerName</p>
                            <p class="purchase-date">Purchased: @p.PurchaseDate.ToString("dd MMM yyyy HH:mm")</p>
                            @if (p.Quantity > 1)
                            {
                                <p class="purchase-quantity">Quantity: @p.Quantity</p>
                                <p class="purchase-price">@p.UnitPrice.ToString("C") × @p.Quantity = @p.Amount.ToString("C")</p>
                            }
                            else
                            {
                                <p class="purchase-price">@p.Amount.ToString("C")</p>
                            }
                            <span class="payment-status @p.PaymentStatus.ToString().ToLower()">
                                @p.PaymentStatus
                            </span>

                            <div class="purchase-actions">
                                <a class="btn-view" href="@Url.Action("PurchaseStatus", "Payment", new { purchaseId = p.PurchaseId })">View Purchase</a>
                                <a class="btn-view" href="@Url.Action("Details", "Listing", new { id = p.ListingId })">View Listing</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>
